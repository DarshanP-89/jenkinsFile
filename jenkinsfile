pipeline{
    agent any
    stages{
        stage("Test"){
            steps{
                echo "====executing A===="
            }
        }
        stage("Build"){
            steps{
                echo "====executing A===="
                bat "docker build -t myimg ."
            }
        }
        stage("Deploy on test"){
            steps{
                echo "====executing A===="
                
                bat "docker tag myimg darshan8998/custom-image"
                withCredentials([usernameColonPassword(credentialsId: 'c84edba2-a62c-4aff-b123-d7a98a58aba3', variable: 'pwd')]) {
                    bat "docker login -u darshan8998 -p ${pwd}"
                    bat "docker push darshan8998/custom-image"
                }
            }
        }
        stage("Deploy on prod"){
            steps{
                echo "====executing A===="
            }
        }
    }

    post{
        always{
            echo "========always========"
	}
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}